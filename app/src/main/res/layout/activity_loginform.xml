<?xml version="1.0" encoding="utf-8"?><!-- #0072c5 -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#003F8E"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical" >
         <android.support.v7.widget.Toolbar
                android:layout_gravity="center_vertical"
                android:id="@+id/tool2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:background="#A0A0A0"
             android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnset"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login Form"
                    android:id="@+id/tvappn"
                    android:textSize="20dp"
                    />

            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_below="@+id/tool2"
                android:orientation="vertical"
                android:background="#55000000"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/linear_background"
                    android:layout_margin="20dp"

                    >
                    <EditText
                        android:drawableLeft="@drawable/fullname_action"
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext1"
                        android:ems="10"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:textColorHint="#ffffff"
                        android:textColor="#ffffff"
                        android:paddingLeft="2dp"
                        android:clickable="true"
                        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVB NM "
                        android:inputType="textPersonName"
                        android:hint="Enter Your User Name"
                        android:lines="1" >
                    </EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#FF8A00"
                        />

                        <EditText
                            android:id="@+id/etpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext1"
                            android:ems="10"
                            android:lines="1"
                            android:singleLine="true"
                            android:maxLength="14"
                            android:paddingLeft="2dp"
                            android:textColorHint="#ffffff"
                            android:textColor="#ffffff"
                            android:inputType="number"
                            android:drawableLeft="@drawable/adhar_action"
                            android:hint="Enter Your Password" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:gravity="center_horizontal"
                    >
                    <Button
                        android:onClick="save"
                        android:id="@+id/btnLogin"
                        android:textSize="20dp"
                        android:layout_width="130dp"
                        android:padding="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:text="Login"
                        android:textColor="#FFFFFF" />
                    <Button
                        android:id="@+id/btnClear"
                        android:onClick="clear"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:text="Clear"
                        android:textColor="#FFFFFF" />


                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:focusable="true" >
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#FF8A00"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>


