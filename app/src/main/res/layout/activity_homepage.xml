<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2a3e61"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btnset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/boi_logo_new" />

                    <TextView
                        android:id="@+id/tvappn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/btnset"
                        android:text="Aadhaar Seeding System"
                        android:textColor="@color/White"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:paddingRight="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/oswal_logo" />
                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

            <!-- <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:scaleType="fitXY"
                 android:src="@drawable/login_scree_orange_bar" />-->

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_scree_orange_bar"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="18">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="17">

                    <!-- <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/tvUName"
                         android:text="Welcome"
                         android:ems="5"
                         android:textSize="12sp"
                         android:textColor="#FFFFFF"
                         />-->
                    <TextView
                        android:id="@+id/tvuname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USER NAME"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <!-- <TextView

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/tvDandT"
                         android:text="Date &amp; Time "
                         android:ems="5"
                         android:textSize="12sp"
                         android:textColor="#FFFFFF"

                         />-->
                    <TextView
                        android:id="@+id/tvDAT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dd/T"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"


                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tool1"
                android:background="#55000000"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/home_btn_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                >

                                <Button
                                   android:layout_marginBottom="2dp"
                                    android:id="@+id/bt_second"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/home_list_icon"
                                    android:textSize="20sp"
                                    />
                                <TextView

                                    android:textColor="@color/White"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Aadhaar Seeding"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:textColor="@color/White"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(Using List)"
                                    android:textSize="12sp"
                                    />
                            </LinearLayout>

                           <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               >
                            <Button
                                android:id="@+id/bt_first"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:hint="SECOND"
                                android:visibility="gone" />

                           </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/home_btn_bg"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                            <Button
                                android:layout_marginBottom="2dp"
                                android:id="@+id/bt_third"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:background="@drawable/home_individual_icon"
                                />

                                <TextView

                                    android:textColor="@color/White"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Aadhaar Seeding"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:textColor="@color/White"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(Individually)"
                                    android:textSize="12sp"
                                    />





                            </LinearLayout>

                            <Button
                                android:id="@+id/bt_forth"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:hint="FORTH"
                                android:visibility="gone" />


                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <!--  <View
              android:layout_width="match_parent"
              android:background="#FF8A00"
              android:layout_height="20dp"
              android:layout_alignBottom="@+id/ll"
              />-->
    </RelativeLayout>

</RelativeLayout>
