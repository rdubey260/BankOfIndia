<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout

        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2a3e61"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/btnset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boi_logo_new" />

                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tvappn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btnset"
                    android:text="Aadhaar Seeding System"
                    android:textColor="@color/White"
                    android:textSize="18dp" />

                <ImageView
                    android:paddingRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/oswal_logo" />
            </RelativeLayout>


        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool2"
            android:background="#55000000"
            android:orientation="vertical"

            >

            <LinearLayout
                android:background="@drawable/login_scree_orange_bar"
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="17">

                    <!-- <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/tvUName"
                         android:text="Welcome"
                         android:ems="5"
                         android:textSize="12sp"
                         android:textColor="#FFFFFF"
                         />-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvuname1"
                        android:text="USER NAME"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <!-- <TextView

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/tvDandT"
                         android:text="Date &amp; Time "
                         android:ems="5"
                         android:textSize="12sp"
                         android:textColor="#FFFFFF"

                         />-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDATe"
                        android:text="dd/T"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"


                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"

                >
               <!-- <TextView
                    android:id="@+id/tv_accountno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:layout_gravity="center"
                    android:text="Account Number"
                    android:textSize="15sp"
                    android:textColor="@color/White" />-->


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/White"
                        >
                    <EditText

                        android:maxLength="15"
                        android:padding="5dp"
                        android:id="@+id/et_accountno_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_scree_edt_background"
                        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890"
                        android:hint="Enter Account No"
                        android:inputType="number"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/Black"
                        android:drawableRight="@drawable/account_icon"/>
                    </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <!--<TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_customerid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:textSize="15sp"
                    android:text="Customer Id"
                    android:textColor="@color/White" />
-->

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/White">

                    <EditText

                        android:maxLength="9"
                        android:padding="5dp"
                        android:id="@+id/et_customerid_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_scree_edt_background"
                        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890"
                        android:hint="Enter Customer Id"
                        android:inputType="number"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/Black"
                        android:drawableRight="@drawable/customer_id_icon"
                        />
                    </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >
                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_scree_17"
                    android:textColor="@color/White"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:text="Search"
                    />

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:background="@drawable/login_scree_17"
                    android:textColor="@color/White"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    />

               <!-- <TextView
                    android:id="@+id/tv_error"
                    android:layout_marginLeft="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter alteast one "
                    android:textColor="@color/Red"
                    android:visibility="gone"
                    />
-->

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_marginRight="1dp"
                android:padding="17dp"
                android:id="@+id/linear_layout_panal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_pannel"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="15sp"
                        android:text="Name"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name_new"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/tv_mobileno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="15sp"
                        android:text="Mobile No"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_mobileno_new"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"

                            android:singleLine="true"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textSize="15sp"

                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/tv_adhrno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="15sp"
                        android:text="Aadhaar No"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_show_adhr_no"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textSize="15sp"

                            />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearlayoutSeeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"

                >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_camera"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp">
                    <ImageView
                        android:id="@+id/img_Aadhar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/camera"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="15dp"
                    android:layout_marginRight="15dp">


                   <!-- <TextView
                        android:id="@+id/tv_adhrName_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="Name as in Aadhaar"
                        android:textColor="@color/White" />-->



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/White">
                        <EditText
                            android:padding="5dp"
                            android:id="@+id/edt_show_adhr_name_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_scree_edt_background"
                            android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890"
                            android:hint="Name in Aadhaar"
                            android:inputType="textPersonName"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="@color/Black"
                            android:drawableRight="@drawable/login_scree_05"
                            />
                        </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                  <!--  <TextView
                        android:id="@+id/tv_adhrno_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="15sp"
                        android:text="Aadhaar No"
                        android:layout_gravity="center"
                        android:textColor="@color/White" />-->


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/White">

                        <EditText
                            android:padding="5dp"
                            android:id="@+id/tv_show_adhr_no_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_scree_edt_background"
                            android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890"
                            android:hint="Enter Aadhar No"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="12"
                            android:singleLine="true"
                            android:textColor="@color/Black"
                            android:drawableRight="@drawable/aadhaar_no"
                            />
                        </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    >
                    <Button
                       android:layout_marginRight="3dp"
                        android:id="@+id/btn_save_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Save"
                        android:textColorHint="@color/White"
                        android:layout_weight="1"
                        android:background="@drawable/login_scree_17"
                        android:textColor="@color/White"
                        />

                    <Button
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Reset"
                        android:layout_weight="1"
                        android:textColorHint="@color/White"
                        android:background="@drawable/login_scree_17"
                        android:textColor="@color/White"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

     <!--   <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="#FF8A00" />-->
    </RelativeLayout>

</RelativeLayout>